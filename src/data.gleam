import gleam/float
import gleam/list
import gleam/order

pub fn get_countries(
  continents: List(String),
  population_filter: Bool,
) -> List(#(String, String, String, Float)) {
  continents
  |> list.map(fn(c: String) -> List(#(String, String, String, Float)) {
    case c {
      "americas" -> americas
      "europe" -> europe
      "asia" -> asia
      "africa" -> africa
      "oceania" -> oceania
      _ -> []
    }
  })
  |> list.flatten()
  |> fn(countries: List(#(String, String, String, Float))) {
    case population_filter {
      True ->
        list.filter(countries, fn(c: #(String, String, String, Float)) {
          float.compare(c.3, 10.0) == order.Gt
        })
      False -> countries
    }
  }
  |> list.shuffle()
  |> list.take(15)
}

